rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isValidUserData() {
      // Allow standard user-writable fields. subscription and stripeCustomerId are admin-only.
      let allowed = ['displayName', 'email', 'photoURL', 'createdAt', 'updatedAt',
                      'settings', 'lastActiveDate', 'emailPreferences'];
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(allowed)
        && request.resource.data.displayName is string
        && request.resource.data.displayName.size() <= 100;
    }

    function isValidUserCreate() {
      return request.resource.data.keys().hasOnly(['displayName', 'email', 'photoURL', 'createdAt',
                'updatedAt', 'settings', 'lastActiveDate', 'emailPreferences'])
        && request.resource.data.displayName is string
        && request.resource.data.displayName.size() <= 100;
    }

    // User profiles - users can only read/write their own data
    // subscription and stripeCustomerId are protected — only writable by Admin SDK (Cloud Functions)
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && isValidUserCreate();
      allow update: if isOwner(userId) && isValidUserData();
      allow delete: if isOwner(userId);

      // Learning progress subcollection
      match /progress/{topicId} {
        allow read, write: if isOwner(userId);
      }

      // Session history subcollection
      match /sessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Public content (read-only for authenticated users)
    match /content/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin via backend
    }

    // Email verifications — users can read their own status, writes are server-only (Admin SDK)
    match /email_verifications/{userId} {
      allow read: if isOwner(userId);
      allow write: if false; // Only Cloud Functions via Admin SDK
    }

    // Analytics (write-only, no read from client)
    match /analytics/{document=**} {
      allow read: if false;
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
